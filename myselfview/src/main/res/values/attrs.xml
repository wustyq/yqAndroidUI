<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MyLoadingView">
        <!--动画持续时间-->
        <attr name="yqDuration" format="integer" />
        <!--设置图片-->
        <attr name="yqImage" format="reference" />
        <!--设置背景颜色-->
        <attr name="yqBg" format="color" />
        <!--设置动画开始的方向-->
        <attr name="yqStartDirection" format="enum">
            <enum name="bottom" value="0" />
            <enum name="top" value="1" />
            <enum name="cover" value="2" />
        </attr>
        <!--设置动画重复的次数-->
        <attr name="yqRepeateCount" format="enum|integer">
            <enum name="infinite" value="-1" />
        </attr>
        <!--设置动画重复的模式-->
        <attr name="yqRepeateMode" format="enum">
            <enum name="reverse" value="2" />
            <enum name="restart" value="1" />
        </attr>
    </declare-styleable>
</resources>